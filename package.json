{
  "name": "benio-b.github.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "serve": "vite preview",
    "build": "vite build --mode production",
    "test": "jest",
    "test:unit": "vue-cli-service test:unit",
    "eslint": "eslint --quiet --ext .ts,.vue .",
    "eslint:fix": "eslint --fix --ext .ts,.vue .",
    "prettier": "prettier --write '**/*.vue' '**/*.ts' '**/*.scss' '!src/shims-vue.d.ts'",
    "stylelint": "npx stylelint '**/*.scss'",
    "stylelint:fix": "npx stylelint --fix '**/*.scss'",
    "lint:all": "npm run eslint:fix && npm run prettier && npm run stylelint:fix",
    "deploy": "node deploy-gh-pages.js"
  },
  "dependencies": {
    "core-js": "^3.19.3",
    "s-vuex-class": "^0.4.1",
    "stylelint": "^14.1.0",
    "vue": "^3.2.24",
    "vue-class-component": "^8.0.0-rc.1",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@intlify/vue-i18n-loader": "^4.0.1",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@vitejs/plugin-vue": "^1.10.2",
    "@vue/compiler-sfc": "^3.2.24",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-rc.6",
    "babel-jest": "^27.4.2",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-no-unsanitized": "^4.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.12.0",
    "execa": "^6.0.0",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "rollup-plugin-visualizer": "^5.5.0",
    "sass": "^1.44.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.0.1",
    "ts-jest": "^27.1.1",
    "typescript": "~3.9.3",
    "vite": "^2.7.1",
    "vue-jest": "^5.0.0-0",
    "vue-property-decorator": "^10.0.0-rc.1",
    "vue3-jest": "^27.0.0-alpha.1",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint --quiet",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "stylelint --fix"
    ]
  }
}
